<?xml version="1.0" encoding="utf-8"?>
 <!DOCTYPE install>
<install type="module" version="1.5.0">
	<name>Kunena Stats</name>
	<author>Kunena team</author>
	<creationDate>@kunenaversiondate@</creationDate>
	<build>@kunenaversionbuild@</build>
	<copyright>(c) 2010 Kunena Team, All rights reserved</copyright>
	<license>GNU/GPL</license>
	<authorEmail>florian@kunena.com</authorEmail>
	<authorUrl>www.kunena.com</authorUrl>
	<version>1.6.0-RC1</version>
	<description>MOD_KUNENASTATS_DESCRIPTION</description>

	<files>
		<filename module="mod_kunenastats">mod_kunenastats.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>

	<languages>
		<language tag="en-GB">en-GB.mod_kunenastats.ini</language>
	</languages>

	<params>
		<param name="stats_type" type="list" default="0" label="MOD_KUNENASTATS_PARAMSTATSTYPE" description="MOD_KUNENASTATS_PARAMSTATSTYPE_DESC">
			<option value="0">MOD_KUNENASTATS_DISPLAY_TYPE_TOPICS</option>
			<option value="1">MOD_KUNENASTATS_DISPLAY_TYPE_POLLS</option>
			<option value="2">MOD_KUNENASTATS_DISPLAY_TYPE_USERS</option>
			<option value="3">MOD_KUNENASTATS_DISPLAY_TYPE_USERS_PROFILES</option>
			<option value="5">MOD_KUNENASTATS_DISPLAY_TYPE_THANK_YOU</option>
			<option value="4">MOD_KUNENASTATS_DISPLAY_TYPE_GENERAL</option>
		</param>
		<param name="nb_items" type="text" default="5" label="MOD_KUNENASTATS_PARAMNBITEMS" description="MOD_KUNENASTATS_PARAMNBITEMS_DESC" />	
		<param name="sh_statslink" type="radio" default="0" label="MOD_KUNENASTATS_PARAMSHOWSTATSLINK" description="MOD_KUNENASTATS_PARAMSHOWSTATSLINK_DESC">
			<option value="0">MOD_KUNENASTATS_PARAM_VALUE_NO</option>
			<option value="1">MOD_KUNENASTATS_PARAM_VALUE_YES</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="moduleclass_sfx" type="text" default="" label="MOD_KUNENASTATS_PARAM_MODULECLASSSUFFIX" description="MOD_KUNENASTATS_PARAMMODULECLASSSUFFIX_DESC" />
	</params>
</install>