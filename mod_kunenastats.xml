<?xml version="1.0" encoding="utf-8"?>
 <!DOCTYPE install>
<install type="module" version="1.5.0">
	<name>Kunena Stats</name>
	<author>Kunena team</author>
	<creationDate>March 2010</creationDate>
	<copyright>(c) 2010 Kunena Team, All rights reserved</copyright>
	<license>GNU/GPL</license>
	<authorEmail>florian@kunena.com</authorEmail>
	<authorUrl>www.kunena.com</authorUrl>
	<version>1.0.0</version>
	<description>Kunena Stats is an official module from Kunena Dev team designed for Kunena 1.6.0 which allow you to show the statistics from kunena forum in a module</description>
	
	<files>        
                <filename module="mod_kunenastats">mod_kunenastats.php</filename>
                <filename>index.html</filename>
                <filename>helper.php</filename>
                <filename>tmpl/default.php</filename>                
                <filename>tmpl/index.html</filename>                
        </files>
 
   <languages>        
        <language tag="en-GB">en-GB.mod_kunenastats.ini</language>
    </languages>
 
    
        <params>
          <param name="stats_type" type="list" default="0" label="Statistics type" description="PARAMSTATSTYPE">          
			     <option value="0">Popular topics</option>
			     <option value="1">Popular polls</option>
			     <option value="2">Popular users</option>
			     <option value="3">Popular users profiles</option>
			     <option value="4">General stats</option>
		      </param>
		      <param name="nb_items" type="text" default="5" label="Number items which will be displayed" description="PARAMNBITEMS" />	
		      <param name="sh_statslink" type="radio" default="0" label="Show Kunena stats link" description="PARAMSHOWSTATSLINK">          
			     <option value="0">No</option>
			     <option value="1">Yes</option>
		      </param>
		      <param name="@spacer" type="spacer" default="" label="" description="" />
          <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
          
          
		          
        </params>
</install>
