<?xml version="1.0" encoding="utf-8"?>
 <!DOCTYPE install>
<install type="module" version="1.5.0" method="upgrade">
	<name>Kunena Latest</name>
	<version>1.0.0</version>
	<creationDate>@kunenaversiondate@</creationDate>
	<build>@kunenaversionbuild@</build>
	<author>www.Kunena.com</author>
	<authorEmail>florian@kunena.com</authorEmail>
	<authorUrl>http://www.kunena.com</authorUrl>
	<copyright>(c) 2010 Kunena Team, All rights reserved</copyright>
	<license>GNU/GPL</license>
	<description>Kunena Latest Post is an official module from Kunena Dev team designed for Kunena 1.6.0 which allow you to show the latest post from kunena forum in a module</description>
	
	<files>
		<filename module="mod_kunenalatest">mod_kunenalatest.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/sticky.png</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/kunenalatest.css</filename>
	</files>

	<languages>
		<language tag="en-GB">en-GB.mod_kunenalatest.ini</language>
	</languages>

	<params>
		<param name="nbpost" type="text" default="5" label="Post number" description="PARAMNUMBERPOSTS" />
		<param name="titlelength" type="text" default="50" label="Title length" description="PARAMTITLELENGTH" />
		<param name="messagelength" type="text" default="150" label="Message length" description="PARAMMESSAGELENGTH" />
		<param name="unreadindicator" type="text" default="!" label="Unread Indicator" description="PARAMUNREADINDICATOR" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="sh_avatar" type="radio" default="0" label="Show avatar" description="PARAMSHOWAVATAR">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="sh_favorite" type="radio" default="0" label="Show favorite" description="PARAMSHOWFAVORITE">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="sh_locked" type="radio" default="0" label="Show thread locked" description="PARAMSHOWLOCKED">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="sh_sticky" type="radio" default="0" label="Show sticky thread" description="PARAMSHOWSTICKY">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="sh_rank" type="radio" default="0" label="Show rank" description="PARAMSHOWPOSTS">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="dateformat" type="text" default="%Y-%m-%d %H:%M:%S" label="Date format" description="PARAMDATEFORMAT" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
</install>
